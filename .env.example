# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key
# Alternative name (both are supported)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Anon key for client-side operations (optional)
SUPABASE_ANON_KEY=your_anon_key

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=https://vykso.com

# ============================================
# YouTube OAuth Configuration
# ============================================
# JSON content of your Google Cloud OAuth 2.0 credentials
# Get it from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_SECRETS_JSON={"web":{"client_id":"...","client_secret":"...","redirect_uris":["..."]}}

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Price IDs for subscription plans (from Stripe Dashboard)
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_MAX=price_...

# ============================================
# AI Model APIs
# ============================================
# OpenAI (for Sora 2)
OPENAI_API_KEY=sk-...

# Google GenAI (for Veo 3.1 and Gemini)
GOOGLE_API_KEY=...

# ============================================
# Storage Configuration
# ============================================
# Supabase Storage bucket name
VIDEOS_BUCKET=vykso-videos

# Cloudflare R2 (optional, if using R2 instead of Supabase Storage)
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET=vykso-videos
R2_PUBLIC_BASE=https://pub-your-id.r2.dev

# ============================================
# App Configuration
# ============================================
PORT=8080
ENVIRONMENT=production
